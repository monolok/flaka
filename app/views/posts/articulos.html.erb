    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" id="img-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Blog</h1>
                        <hr class="small">
                        <div class="row">
                          <div class="col-xs-6 col-xs-offset-3">
                            <%= form_tag(articulos_path, method: :get) do %>
                                <div class="input-group">
                                    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Buscar..." %>
                                    <span class="input-group-btn">
                                        <%= submit_tag 'Go!', class: "btn btn-default" %>
                                    </span>
                                </div>
                            <% end %>
                          </div><!-- /.col-lg-6 -->
                        </div><!-- /.row -->
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <p class="text-success"><%= flash[:subscribe] %></p>
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1" id="ajax_articulos" data-id="<%=post_count%>">
                <%= render "posts/articulos" %>               
            </div>
        </div>
        <div class="row">
            <!-- Pager -->
            <%if post_count > 5%>
                <ul class="pager">
                    <li class="next">
                        <a class="click mas">Mas articulos &rarr;</a>
                    </li>
                </ul>
            <%end%> 
        </div>
    </div>