    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" id="img-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><%= @post.title %></h1>
                        <p class="subheading">
                            <div class="in">
                                Compártelo: <%= social_share_button_tag("test") %>
                            </div>                            
                        </p>
                        <span class="meta">Posted by <%= link_to "Ime Isa", flaka_path %> on <%= @post.created_at.strftime('%b %d, %Y') %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div><%= raw @post.body %></div>
                    <p class="subheading">
                        <div class="in">
                            Compártelo: <%= social_share_button_tag("test") %>
                        </div>                            
                    </p>
                </div>
            </div>
        </div>
    </article>