
  <%= simple_form_for @post do |f| %>
    <div class="form-group">
      <%= f.input :title, error: "can't be blank", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :category_ids, collection: @categories, as: :check_boxes, group_method: :category_posts %>
    </div>

    <div class="form-group">
      <%= f.input :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, error: "can't be blank", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.button :submit %>
    </div>
  <% end %>

